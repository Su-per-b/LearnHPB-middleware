<testcase>
    <id>
        test_sort_photos
    </id>
    <component> 
        imginfo
    </component>
    <summary>
        Check photo collection sorting
    </summary>
    <description>
        1. Open a folder
        2. Select "View->sort by date"
        3. Select "Sort by->Place" from pop-up menu
        4. Select another folder
    </description>
    <expectedresult>
        1. Folder visible
        2. Photos sorted according to shooting date
        3. Photos sorted according to shooting place
        4. Photos sorted according to shooting place
        
    </expectedresult>
</testcase>
